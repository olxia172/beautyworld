<div class="row">
  <div class="col-md-5">
    <%= image_tag(@brand.logo_url(:thumb)) unless @brand.logo.file.nil? %>
  </div>
  <div class="col-md-5 pull-left">
    <h2><%= @brand.name %></h2>
  </div>
  <div class="col-md-2">
    <%= link_to 'Edit', edit_brand_path(@brand), class: 'btn btn-primary pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <p class="justify"><%= @brand.description %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h2>Products</h2>
  </div>
  <div class="col-md-6">
    <%= link_to 'Add new product', new_brand_product_path({brand_id: @brand.id}), class: 'btn btn-primary pull-right' %>
  </div>
</div>

<%= render 'products/product_list' %>
