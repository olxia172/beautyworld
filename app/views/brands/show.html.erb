<% breadcrumb :brand, @brand %>

<div class="row">
  <div class="col-md-4">
    <%= image_tag(@brand.logo_url(:thumb)) unless @brand.logo.file.nil? %>
  </div>
  <div class="col-md-6">
    <h2><%= @brand.name %></h2>
  </div>
  <div class="col-md-2">
    <%= link_to 'Edit', edit_brand_path(@brand), class: 'btn btn-primary pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <p class="justify"><%= @brand.description %></p>
  </div>
</div>

<%= link_to "See products", brand_products_path(@brand), class: 'btn btn-info text-center' %>
