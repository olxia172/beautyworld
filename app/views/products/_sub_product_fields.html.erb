<div class="row nested-fields">
  <div class="col-md-9 col-md-offset-1">
    <div class="field">
      <%= f.input :name %>
    </div>
    <div class="field">
      <%= f.input :ingredient_tokens, label: "Subproduct ingredients",
      input_html: { data: { load: f.object.ingredients } }  %>
    </div>
  </div>
  <div class="col-md-2">
    <%= link_to_remove_association "Remove", f %>
  </div>
</div>
