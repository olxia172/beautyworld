<h1>Products</h1>

<% @all_products.each do |product| %>
  <h2><%= product.name %></h2>
  <%= link_to "Show", product_path(product), class: "btn btn-deafult" %>
  <%= link_to "Edit", edit_product_path(product), class: "btn btn-deafult" %>
  <%= link_to "Delete", product_path(product),
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "btn btn-danger"%>

<% end %>

<%= link_to "Add new product", new_product_path %>
