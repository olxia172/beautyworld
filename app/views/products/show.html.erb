<h1>Name:</h1>
<p> <%= @product.name %> </p>

<h1>Brand:</h1>
<p> <%= @product.brand.name %> </p>

<p> <%= image_tag(@product.image_url(:thumb)) %> </p>
<h1>Description:</h1>
<p><%= @product.description %></p>

<h1>Ingredients:</h1>
<p>
<%= product_ingredients(@product) %>
</p>

<h1>Ingrediens analysis:</h1>
<% @product.ingredients.each do |ingr| %>

  <p><%= ingr.name %> <%= "*" if ingr.allergen == true %> | <%= ingr.ingredient_functions.first.name %>  </p>
<% end %>

<%= link_to "Edit", edit_product_path(@product) %>
