<% breadcrumb :all_categories %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <% @main_categories.each do |main_cat| %>
      <thead>
        <tr>
          <th class="success"> <%= main_cat.name %> </th>
        </tr>
      </thead>
      <% main_cat.subcategories.each do |sub_cat| %>
      <tbody>
        <tr>
          <th scope="row"> <%= link_to sub_cat.name, subcategory_products_path(sub_cat), class: "subcategory-link" %>
            <span class="badge badge-primary badge-pill"> <%= sub_cat.products.count %> </span>
          </th>
        </tr>
      </tbody>
      <% end %>
      <% end %>
    </table>
  </div>
</div>

<%= link_to "Add new subcategory", [:new, :subcategory], class: 'btn btn-default' %>
